RUN_DIR=/var/vcap/sys/run/main
LOG_DIR=/var/vcap/sys/log/main
PIDFILE=$RUN_DIR/pid

RUNAS=vcap

function pid_exists() {
 ps -p $1 &> /dev/null
}

case $1 in
  start)
  mkdir -p $RUN_DIR $LOG_DIR
      chown -R vcap:vcap $RUN_DIR $LOG_DIR

      echo $$ > $PIDFILE

      cd /var/vcap/packages/main

      echo $PWD
  ;;
  stop)
  PID=$(head -1 $PIDFILE)
      if [ ! -z $PID ] && pid_exists $PID; then
        kill $PID
      fi
      while [ -e /proc/$PID ]; do sleep 0.1; done
      rm -f $PIDFILE
      ;;

  *)
  echo "Usage: ctl {start|stop|console}" ;;
  esac
  exit 0
